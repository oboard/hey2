<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_root"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<View
		android:id="@+id/main_blacker"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"
		android:background="#66000000"/>

	<View
		android:id="@+id/main_popn"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"/>

	<View
		android:id="@+id/main_back_icon"
		android:layout_margin="16dp"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_centerVertical="true"/>

	<View
		android:id="@+id/main_forward_icon"
		android:layout_margin="16dp"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"/>
    
	<RelativeLayout
		android:id="@+id/main_ground"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:clipChildren="false">

        <FrameLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:translationY="160dp"
            android:padding="2dp">
            
        <GridView
            android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:numColumns="4"
            android:columnWidth="80dp"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"/>
        
        </FrameLayout>
        
		<FrameLayout
			android:id="@+id/main_desktop"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="48dp">

		</FrameLayout>

		<HorizontalScrollView
			android:id="@+id/main_multi_scroll_box"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/colorPrimary"
			android:visibility="gone">

			<LinearLayout
				android:id="@+id/main_multi_scroll"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>

		</HorizontalScrollView>
        
        <View
            android:id="@+id/main_aniimage"
            android:layout_height="0dp"
            android:layout_width="0dp"/>

		<omark.hey.ScrollText
			android:onClick="onDockClick"
			android:id="@+id/main_dock"
			android:textColor="#fff"
			android:background="?@android:attr/selectableItemBackground"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_alignParentBottom="true"
			android:gravity="center"
			android:text="Hey"/>

		<omark.hey.HeyProgress
			style="?android:attr/progressBarStyleHorizontal"
			android:id="@+id/main_progress"
			android:layout_height="2dp"
			android:layout_width="match_parent"
			android:layout_alignTop="@id/main_dock"/>

		<LinearLayout
			android:id="@+id/main_multi_box"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_alignParentBottom="true"
			android:gravity="center"
			android:clickable="true"
			android:visibility="gone">
            
            <TextView
                android:id="@+id/main_multi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAffffff"
                android:textSize="16sp"
                android:text="1">
                
            </TextView>

		</LinearLayout>

		<LinearLayout
			android:padding="5dp"
			android:id="@+id/main_manager"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:background="#fff"
            android:visibility="gone">

			<FrameLayout
				android:layout_height="48dp"
				android:layout_width="match_parent"
				android:background="#11000000">

				<ImageButton
					android:id="@+id/main_manager_back"
					android:scaleX="0.7"
					android:scaleY="0.7"
					android:src="@drawable/back"
					android:layout_height="match_parent"
					android:layout_width="48dp"
					android:background="?android:attr/selectableItemBackground"
					android:onClick="onManagerBackClick"/>

				<EditText
					android:layout_marginLeft="48dp"
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:background="#00000000"
					android:imeOptions="actionGo"
					android:id="@+id/main_text"
					android:singleLine="true"
					android:maxLines="1"/>

			</FrameLayout>

			<LinearLayout
				android:layout_height="48dp"
				android:layout_width="match_parent"
				android:background="#11000000">

				<ImageButton
					android:id="@+id/main_manager_t0"
					android:src="@drawable/bookmark"
					android:layout_height="match_parent"
					android:layout_width="48dp"
					android:background="?android:attr/selectableItemBackground"
					android:onClick="onManagerClick"/>

				<ImageButton
					android:id="@+id/main_manager_t1"
					android:src="@drawable/history"
					android:layout_height="match_parent"
					android:layout_width="48dp"
					android:background="?android:attr/selectableItemBackground"
					android:onClick="onManagerClick"/>

				<ImageButton
					android:id="@+id/main_manager_t2"
					android:src="@drawable/settings"
					android:layout_height="match_parent"
					android:layout_width="48dp"
					android:background="?android:attr/selectableItemBackground"
					android:onClick="onManagerClick"/>

			</LinearLayout>

			<View
                android:id="@+id/main_manager_tab"
				android:background="#000000"
				android:layout_height="2dp"
				android:layout_width="48dp"/>
            
            <FrameLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">
                
                <LinearLayout
                    android:id="@+id/main_manager_p1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                    
                    <ListView
                        android:id="@+id/main_manager_book_list"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>
                    
                </LinearLayout>
                
                <LinearLayout
                    android:background="#027384"
                    android:id="@+id/main_manager_p2"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:visibility="gone">

                    <ListView
                        android:id="@+id/main_manager_history_list"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>

                </LinearLayout>
                
                <LinearLayout
                    android:background="#550012"
                    android:id="@+id/main_manager_p3"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:visibility="gone">
                    
                    

                </LinearLayout>
                
            </FrameLayout>

		</LinearLayout>

	</RelativeLayout>

</RelativeLayout>

