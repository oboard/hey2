<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/multi_root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp"
	android:background="#33FFFFFF">

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1">

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_weight="1">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_centerHorizontal="true"
				android:id="@+id/multi_text0"
				android:layout_marginBottom="0dp"/>

			<ImageView
				android:id="@+id/multi_image0"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_margin="10dp"
				android:layout_below="@id/multi_text0"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_weight="1">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_centerHorizontal="true"
				android:id="@+id/multi_text1"
				android:layout_marginBottom="0dp"/>

			<ImageView
				android:id="@+id/multi_image1"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_margin="10dp"
				android:layout_below="@id/multi_text1"/>

		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1">

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_weight="1">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_centerHorizontal="true"
				android:id="@+id/multi_text2"
				android:layout_marginBottom="0dp"/>

			<ImageView
				android:id="@+id/multi_image2"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_margin="10dp"
				android:layout_below="@id/multi_text2"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_weight="1">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_centerHorizontal="true"
				android:id="@+id/multi_text3"
				android:layout_marginBottom="0dp"/>

			<ImageView
				android:id="@+id/multi_image3"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_margin="10dp"
				android:layout_below="@id/multi_text3"/>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>

