<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/multi_root"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#fff"
	android:paddingBottom="48dp">

	<RelativeLayout
        android:layout_margin="5dp"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:id="@+id/multi_text0"/>

		<ImageView
            android:layout_margin="5dp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerHorizontal="true"
			android:onClick="onMultiClick"
			android:id="@+id/multi_image0"
			android:layout_below="@id/multi_text0"/>

	</RelativeLayout>

	<RelativeLayout
        android:layout_margin="5dp"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:id="@+id/multi_text1"/>

		<ImageView
            android:layout_margin="5dp"
			android:onClick="onMultiClick"
			android:id="@+id/multi_image1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerHorizontal="true"
			android:layout_below="@id/multi_text1"/>

	</RelativeLayout>

</LinearLayout>

