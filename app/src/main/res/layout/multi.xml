<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/multi_root"
	android:layout_height="fill_parent"
	android:layout_width="wrap_content"
	android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false">

        <TextView
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/multi_text1"/>

        <omark.hey.ScrollImage
            android:layout_margin="10dp"
            android:onClick="onMultiClick"
            android:id="@+id/multi_image1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/multi_text1"/>

    </RelativeLayout>
    
	<RelativeLayout
		android:layout_margin="10dp"
		android:layout_height="fill_parent"
		android:layout_width="wrap_content"
		android:layout_weight="1"
        android:clipChildren="false">

		<TextView
			android:textColor="#fff"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_centerHorizontal="true"
			android:maxLines="1"
			android:ellipsize="end"
			android:id="@+id/multi_text0"/>

		<omark.hey.ScrollImage
			android:layout_margin="10dp"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_centerHorizontal="true"
			android:onClick="onMultiClick"
			android:id="@+id/multi_image0"
			android:layout_below="@id/multi_text0"/>

	</RelativeLayout>

</LinearLayout>

